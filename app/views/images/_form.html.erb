<%= simple_form_for(@image, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :image %>
    <%= f.input :title %>
    <%= f.input :notes, as: :text, input_html: { rows: "2" } %>

  <div class="form-actions">
    <%= f.button :submit, class: "btn btn-primary" %>
  </div>
<% end %>

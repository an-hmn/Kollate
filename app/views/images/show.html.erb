<div class="row">
	<div class="span6 offset3">
		<div class="well">
				<%= image_tag @image.source %>
			<p>
				<strong>Title:</strong>
				<%= @image.title %>
			</p>

			<p>
				<strong>Notes:</strong>
				<%= @image.notes %>
			</p>
				<% if current_user == @image.user %>
					<%= link_to 'Edit', edit_image_path(@image) %> |
				<% end %>
				<%= link_to 'Back', images_path %>
		</div>
	</div>
</div>


